            <%= link_to raw('<i class="fa fa-trash-o" aria-hidden="true"> Supprimer</i>'), mail_list_delete_path(ml),:remote => true, class: "red-text" , "data-toggle"=>"tooltip", "data-placement"=>"top", title:"Supprimer"%>
