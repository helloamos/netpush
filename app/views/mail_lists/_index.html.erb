<% @mail_lists.each do |ml| %>
    <tr>
      
      <td><%= ml.full_name %></td>
      <td><%= ml.phone %></td>
      <td><%= ml.city %></td>
      <td><%= ml.country %></td>
      <td><%= ml.email %></td>
                              
     
     
		<td>
			<ul>

      			<li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">GERER<span class="caret"></span></a>
          <ul class="dropdown-menu">
          <li>
          	<%= link_to raw('<i class="fa fa-pencil-square-o" aria-hidden="true"> Modifier</i>'),edit_mail_list_path(ml), remote: true , "data-toggle"=>"tooltip", "data-placement"=>"top", title:"Modifier"%>
</li>
