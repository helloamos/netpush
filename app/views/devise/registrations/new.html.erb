<div class="container full_form_page">
    <div class="signin_logo">
        <%= image_tag('logo.png') %>
    </div>
    <div class="col-md-3">   
        
    </div>

    <div class="col-md-6">
        <div class="signup">
            <div class="panel panel-default">
                <h2>Inscrivez-vous gratuitement!</h2>

                <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                  <%= devise_error_messages! %>

                  

                  

                  <div class="form-group">
                    
                    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse e-mail" %>
                  </div>

                  <div class="form-group">
                   
                    
                    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Mot de passe" %>
                    <% if @minimum_password_length %>
                    <em>(<%= @minimum_password_length %> characters minimum)</em>
                    <% end %><br />
                  </div>

                  <div class="form-group">
                    
                    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmation du mot de passe" %>
                  </div>

                  <div class="form-group">
                    <%= f.submit "Créer mon compte", class: "btn btn-success" %>
                  </div>
                  <div class="terms_of_services">
                     En vous inscrivant, vous confirmez que vous acceptez les <%= link_to"Termes et Conditions" %> et la <%= link_to"Politique de Confidentialité" %>
                  </div>
                <% end %>

                
            </div>
        </div>

        <div class="bottom_signin">
            <div class="panel panel-default">
            Déjà un compte?
            <%= render "devise/shared/login" %>
            </div>
        </div>

    </div>

    <div class="col-md-3">   
    </div>

</div>