<%= form_for @phone_list do |f| %>
	<div class="form-group">
		<%= f.text_field :full_name, class: "form-control", placeholder: "Nom et prénom" %>
	</div>

	<div class="form-group">
		<%= f.text_field :phone, class: "form-control", placeholder: "Téléphone" %>
	</div>
	<div class="form-group">
		<%= f.text_field :city, class: "form-control", placeholder: "Ville" %>
	</div>
	<div class="form-group">
		<%= f.country_select :country,  {include_blank: 'Veuillez sélectioner votre pays' }, {class: "form-control"} %>
	</div>
	<div class="form-group">
		<%= f.text_field :email, class: "form-control", placeholder: "E-mail" %>
	</div>
	<div class="form-group">
		<%= f.submit "Créer", class: "btn btn-primary" %>
	</div>
<% end %>